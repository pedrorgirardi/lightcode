{
    "name": "lightcode",
    "displayName": "Light Code",
    "description": "Smart completions, code navigation and refactoring for Clojure",
    "version": "0.0.1",
    "publisher": "pedrorgirardi",
    "author": {
        "name": "Pedro Girardi",
        "email": "pedro.rogerio.girardi@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://bitbucket.org/pedrogirardi/lightcode.git"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:clojure",
        "onCommand:lightcode.switchOn",
        "onCommand:lightcode.switchOff"
    ],
    "main": "./extension",
    "contributes": {
        "configurationDefaults": {
            "[clojure]": {
                "editor.wordSeparators": "\t ()\"':,;~@#$%^&{}[]`"
            }
        },
        "commands": [
            {
                "title": "Switch on",
                "category": "Light Code",
                "command": "lightcode.switchOn"
            },
            {
                "title": "Switch off",
                "category": "Light Code",
                "command": "lightcode.switchOff"
            }
        ]
    },
    "scripts": {
        "watch": "npx shadow-cljs watch :extension",
        "release": "npx shadow-cljs release :extension",
        "vscode:prepublish": "npm run release",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "shadow-cljs": "^2.3.16",
        "vscode": "^1.1.16"
    },
    "dependencies": {
        "bencoder": "0.0.5",
        "buffer": "^5.1.0",
        "net": "^1.0.2",
        "nrepl-client": "^0.2.3"
    }
}