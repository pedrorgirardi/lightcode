{
    "name": "lightcode",
    "displayName": "Light Code",
    "description": "REPL integration for Clojure & ClojureScript",
    "version": "0.0.1",
    "publisher": "pedrorgirardi",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:clojure"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "title": "Welcome",
                "category": "Light Code",
                "command": "lightcode.welcome"
            },
            {
                "title": "Connect",
                "category": "Light Code",
                "command": "lightcode.connect"
            },
            {
                "title": "Disconnect",
                "category": "Light Code",
                "command": "lightcode.disconnect"
            }
        ]
    },
    "scripts": {
        "watch": "npx shadow-cljs watch :extension",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "shadow-cljs": "^2.3.16",
        "vscode": "^1.1.16"
    },
    "dependencies": {
        "bencoder": "0.0.5",
        "buffer": "^5.1.0",
        "net": "^1.0.2"
    }
}